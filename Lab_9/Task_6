#include <iostream>
#include <string>
#include<cmath>
#include <ctime>
#include <cstdlib>
using namespace std;

int main()
{
int a[5]={}; 
srand(time(NULL));
for(int i = 0; i < 5; i++){
a[i]=rand();
}
cout<<"Orriginal array is:";

 for (int i = 0; i < 5; i++) {
        cout << a[i] << " ";
 }
cout<<endl; 

 int index;
 int f=0;
 for (int i = 0; i < 5; i ++) {
        if (f==1){
        break;}
        
        if (a[i]==0){
            index=a[i];
            f=1;
            }
}
if(f==0){
cout<<"There are no 0s:";}
else{
cout<<"Index is:"<<index;}

}
