#include <iostream>
#include <string>
#include<cmath>
using namespace std;

int main()
{
    float x,y,a,c;

cout <<"Enter x:";
cin>> x;
cout<<"Enter a:";
cin>>a;
if (x<=0){
    cout<<"Answer is "<<2*pow(x,2)+a;
    }
    else{
    cout<<"Enter c:";
    cin>>c;
    cout<<"Answer is "<<(x+3*a)*c;
    }

//-----------------------------------------------------------------------------------
cout <<"Enter x:";
cin>> x;
cout <<"Enter y:";
cin>> y;
if (x+y>=-1 && x+y<=0 && x<0 && y<0){
    cout<<"This point is in area ";
    }
    else if(x+y<=1 && x+y>0){
    cout<<"This point is in area ";
    }
    else{
    cout<<"This point is NOT in area ";
    }

}
